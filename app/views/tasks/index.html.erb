<h1>My Task</h1>

<%= link_to "New Task", new_task_path %>

<ul>
 <% @tasks.each do |task| %>
  <li>
    <%= check_box_tag "tag_ids[]", task.id, task.completed %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
 <% end %>
</ul>
